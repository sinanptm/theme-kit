{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": false
	},
	"files": {
		"includes": [
			"**",
			"!**/node_modules",
			"!**/.vscode",
			"!**/dist",
			"!**/.next",
			"!**/pnpm-lock.yaml"
		]
	},
	"formatter": {
		"indentWidth": 4,
		"lineWidth": 100,
		"useEditorconfig": false
	},
	"linter": {
		"rules": {
			"complexity": {
				"useArrowFunction": "error"
			},
			"suspicious": {
				"noUnknownAtRules": "off",
				"noDebugger": "on",
				"noExplicitAny": "off",
				"noArrayIndexKey": "off",
				"noDocumentCookie": "off"
			},
			"style": {
				"useImportType": "off",
				"noNonNullAssertion": "off"
			},
			"a11y": {
				"useButtonType": "off",
				"noStaticElementInteractions": "off"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "on",
					"options": {
						"attributes": [
							"classList"
						],
						"functions": [
							"clsx",
							"cva",
							"tw",
							"tw.*"
						]
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"trailingCommas": "all",
			"arrowParentheses": "always"
		}
	},
	"html": {
		"formatter": {
			"selfCloseVoidElements": "always"
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":PACKAGE:",
							"",
							"@/**",
							"~/**",
							"",
							":RELATIVE:"
						]
					}
				}
			}
		}
	}
}